<div class="bs-example" data-example-id="basic-forms">
  <%= form_for [@lecture_store, @lecture_store.lectures.build] do |f| %>
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, class: "form-control",
                                  placeholder: "Name" %>
    </div>
    <div class="form-group">
      <label>Description</label>
      <%= f.text_field :description, class: "form-control",
                                  placeholder: "Description" %>
    </div>
    <div class="form-group">
      <label>Url</label>
      <%= f.text_field :url, class: "form-control", placeholder: "URL" %>
    </div>
    <div class="form-group">
      <label>Auhor</label>
      <%= f.text_field :author, class: "form-control", placeholder: "Author" %>
    </div>
    <button type="submit" class="btn btn-default">Create
    </button>
  <% end %>
</div>