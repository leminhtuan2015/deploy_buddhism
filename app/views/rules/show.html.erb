 <div id="fb-root"></div>

<ol class="breadcrumb">
  <li><%= link_to "Luật"%></li>
  <li>
    <%= link_to @rule.rule_store.name, rule_store_path(@rule.rule_store) %>
  </li>
  <li>
    <%= @rule.name %>
  </li>
</ol>

<% if logged_in? %>
<div class="bs-example">
    <ul class="nav nav-pills" role="tablist">
      <li role="presentation" class="dropdown">
        <a id="drop4" href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
          Action
          <span class="caret"></span>
        </a>
        <ul id="menu1" class="dropdown-menu" role="menu" aria-labelledby="drop4">
          <li role="presentation">
          <%= link_to "Edit.", edit_rule_store_rule_path(@rule.rule_store, @rule) %>
          </li>
          <li role="presentation">
            <%= link_to "Delete.", rule_store_rule_path(@rule.rule_store, @rule),
                    method: :delete,
                    data: { confirm: 'Make sure you want to do this?' }%>
          </li>
          <li role="presentation" class="divider"></li>
          <li role="presentation">
          	
          </li>
        </ul>
      </li>
    </ul> <!-- /pills -->
  </div>
<% end %>

<div class="jumbotron jumbotron_clip">
<i>
<div class="small_info_time">
<%= @rule.created_at.to_date.to_date%>
</div>
</i>
  <div class="title_show">
      <%= @rule.name %>
  </div>
  <%= @rule.content.squish.html_safe%>
  <br>
  <i>
  Trích dẫn : <%= @rule.description %>
  <br><br>
  Tác giả : <%= @rule.author %>
  <br><br>
   Dịch giả : <%= @rule.translator %>
   </i>
          <br><br><br><br>
          <div class="fb-like" data-href=<%= request.original_url %> data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
</div>

<div class="breadcrumb_retative">
<ol class="breadcrumb breadcrumb_retative bg_breadcrumb">
  <li><%= link_to "Bài liên quan"%></li>
  </ol>
<div class=" bg_white_color breadcrumb_retative">
<% @rule.rule_store.rules.sample(10).each do |rule| %>
  <div class=" thumbnail caption news_title_thumnail ">  
    <span class="glyphicon glyphicon-pushpin" aria-hidden="true">
    </span>
    <%= link_to rule.name, rule_store_rule_path(rule.rule_store, rule) %>
     <div class="small_info_time">
       <%= rule.created_at.to_date %>
     </div>
  </div>
<hr>
<% end %>
</div>
</div>

<div class="jumbotron jumbotron_clip">
  <div class="fb-comments" 
    data-href=<%= request.original_url %> data-width="100%" data-numposts="5" data-colorscheme="light">
  </div>
</div>



